[user]
	name = Sam Crang
	email = sam.crang@gmail.com

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[core]
	excludesfile = ~/.gitignore

[color]
	ui = true

[diff]
	tool = vimdiff
[merge]
	tool = p4merge
	conflictStyle = diff3

[branch]
	autosetuprebase = always
[push]
	default = simple
[gpg]
	program = gpg
[difftool]
	prompt = false
[init]
	defaultBranch = main
[interactive]
	singlekey = true
[github]
	user = samcrang
